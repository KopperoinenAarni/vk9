<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtNoteIdText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Muistiinpanon ID"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNoteTimeAndDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Päivämäärä ja aika" />

    <TextView
        android:id="@+id/txtNoteTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Otsikko"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNoteContentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sisältö" />


</LinearLayout>

