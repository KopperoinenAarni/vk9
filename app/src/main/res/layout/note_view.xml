<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/NoteIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muistiinpanon ID"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/NoteTimeAndDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Päivämäärä ja aika" />

    <TextView
        android:id="@+id/NoteTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Otsikko"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/NoteContentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sisältö" />


</LinearLayout>

